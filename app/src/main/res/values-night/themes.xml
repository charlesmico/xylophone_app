<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Xylophone" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Brand color. -->
        <item name="colorPrimary">@color/red_shade</item>
        <item name="colorPrimaryVariant">@color/white_shade</item>
        <item name="colorOnPrimary">@color/white_shade</item>

        <!-- Status Bar Color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Not Transparent Status Bar. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Transparent Status Bar. -->
        <!-- <item name="android:windowDrawsSystemBarBackgrounds">false</item> -->

        <!-- Light Status Bar. -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Dark Status Bar. -->
        <!-- <item name="android:windowLightStatusBar">false</item> -->

        <!-- Light Navigation Bar. -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Dark Navigation Bar. -->
        <!-- <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item> -->

        <!-- Window Animation Style. -->
        <item name="android:windowAnimationStyle">@style/ScreenActivityAnimation</item>

        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.Xylophone" parent="Base.Theme.Xylophone" />

    <!-- Screen Activity Animation. -->
    <style name="ScreenActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- Text Style. -->
    <style name="HeaderText">
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:textColor">@color/black_shade</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DescriptionText">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black_shade</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Button Style. -->
    <style name="ColoredButton">
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_shade</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TransparentButton">
        <item name="android:background">@drawable/transparent_button_style</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_shade</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Alert Dialog Style. -->
    <style name="MaterialAlertDialog" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- Background Color. -->
        <item name="android:background">@color/white_shade</item>
        <!-- Text Color for Title and Message. -->
        <item name="colorOnSurface">@color/black_shade</item>
    </style>

</resources>